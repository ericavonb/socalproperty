mixin phone_number(number)
  -var number = [number.substr(0,3), number.substr(3,3), number.substr(6,4)]
  -var divisor = "-"
  .phone_number
    span.area_code #{"(" + number[0] + ") "}
    span.number #{number[1]}
    span.divisor #{divisor}
    span.number #{number[2]}

mixin link(item)
  - var c = (item.cls) ? item.cls : " "
  a(href="#{item.href}", class="#{c}") #{item.label}

mixin nav(items, cls)
  nav
    ul(class="#{cls}")
      - each item in items
        li
          mixin link(item)


mixin design
  .design
    .name
      span Design by 
      span.designer Erica von Buelow
    .design-contact
      span Contact at 
      a(href="mailto:evonbuelow@gmail.com") #{email}

